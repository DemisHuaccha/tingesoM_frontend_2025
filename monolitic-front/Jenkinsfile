pipeline {
    agent any

    environment {
        IMAGE_NAME = "demishuaccha/tingeso-m-frontend"
        IMAGE_TAG  = "latest"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Frontend') {
            steps {
                script {
                    runCmd("""
                        cd monolitic-front && npm install && npm run build
                    """)
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    runCmd("""
                        docker build -t ${IMAGE_NAME}:${IMAGE_TAG} -f monolitic-front/Dockerfile monolitic-front
                    """)
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    runCmd("""
                        docker push ${IMAGE_NAME}:${IMAGE_TAG}
                    """)
                }
            }
        }

        stage('Deploy with Docker Compose') {
            steps {
                script {
                    runCmd("""
                        cd monolitic-front && \
                        docker compose down && \
                        docker compose pull && \
                        docker compose up -d
                    """)
                }
            }
        }
    }

    post {
        failure {
            echo "Algo fall√≥ en el pipeline"
        }
    }
}

def runCmd(cmd) {
    if (isUnix()) {
        sh cmd
    } else {
        bat cmd
    }
}
